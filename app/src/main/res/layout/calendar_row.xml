<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingEnd="8dp"
    android:paddingStart="8dp"
    android:paddingBottom="4dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:layout_margin="4dp">

        <RelativeLayout
            android:id="@+id/calendar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            >

            <TextView
                android:id="@+id/od"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="od" />

            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/od"
                android:layout_margin="4dp"
                android:layout_toEndOf="@id/od"
                android:text="start" />

            <TextView
                android:id="@+id/to_slowo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/od"
                android:layout_margin="4dp"
                android:layout_toEndOf="@id/start_time"
                android:text="do" />

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/od"
                android:layout_margin="4dp"
                android:layout_toEndOf="@id/to_slowo"
                android:text="end" />

            <TextView
                android:id="@+id/subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingEnd="8dp"
                android:text="subject"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/subject_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/subject"
                android:layout_margin="8dp"
                android:text="type of subject"
                android:textColor="@android:color/darker_gray"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>