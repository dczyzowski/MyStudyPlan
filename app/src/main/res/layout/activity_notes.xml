<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context="com.agh.mystudyplan.NotesActivity">

    <TextView
        android:id="@+id/sub_notes_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Notatki"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <ScrollView
        android:id="@+id/sub_notes_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sub_notes_text"
        >

        <EditText
            android:id="@+id/sub_notes_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" />
    </ScrollView>

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:text="Dodaj"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/add_button"
        android:layout_toLeftOf="@id/add_button"
        android:layout_toStartOf="@id/add_button"
        android:background="@android:color/transparent"
        android:text="Anuluj"
        android:textColor="@color/colorPrimaryDark" />

</RelativeLayout>
